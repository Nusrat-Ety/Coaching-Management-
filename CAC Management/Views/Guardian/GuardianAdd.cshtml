@model CAC_Management.Models.Guardian
@{ ViewData["Title"] = "GuardianAdd";
                Layout = "~/Views/Shared/_LayoutForAdmin.cshtml"; }

<body style="background-color:#db937b;align-content: center;">
    <div class="container" style="width: 40%;">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
            <h2 style="text-align: center;"><strong>Add New Gurdian </strong></h2>
            <hr />

            <div class="form-group">
                <label asp-for="GuardianName"></label>
                <input asp-for="GuardianName" class="form-control" />
                <span asp-validation-for="GuardianName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact"></label>
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>

            <input type="submit" class="btn-primary" value="Add Gurdian" />
        </form>
    </div>
</body>