@model List<CAC_Management.Models.Guardian>

@{ Layout = "_LayoutForAdmin";
                ViewData["Title"] = "Guardian List"; }

<h1 style="text-align:center">Guardian List</h1>
<body style="background-color: #db937b;align-content: center;">
    <div class="container" style="width: 20%;">
        <div class="form-group">
            @*<div class="input-group-addon">
                <form asp-controller="Guardian" asp-action="Search">
                    <input placeholder="Search By Id" class="form-control" name="id" />
                    <a asp-controller="Guardian" asp-action="Search" asp-route-id="id"><input type="submit" value="Search" /></a>
                </form>
            </div>*@
        </div>
    </div>
    <div class="container">
        <table border="1" class="table table-bordered" cellpadding="1" cellspacing="1">
            <thead>
                <tr>
                    <td style="text-align:center; font-weight: bold;">Guardian Id</td>
                    <td style="text-align:center; font-weight: bold;">Guardian Name</td>
                    <td style="text-align:center; font-weight: bold;">Contact</td>
                    <td style="text-align:center; font-weight: bold;">Address</td>
                    <td style="text-align:center; font-weight: bold;">Email</td>
                    <td style="text-align:center; font-weight: bold;">Password</td>

                    <td style="text-align:center; font-weight: bold;">Action</td>
                </tr>
            </thead>
            @foreach (var f in Model)
            {
<tr>
    <td style="text-align:center">@f.GuardianId</td>
    <td style="text-align:center">@f.GuardianName</td>
    <td style="text-align:center">@f.Contact</td>
    <td style="text-align:center">@f.Address</td>
    <td style="text-align:center">@f.Email</td>
    <td style="text-align:center">@f.Password</td>

    
    <td style="text-align:center">
        <a asp-action="GuardianDetails" asp-route-id="@f.GuardianId" class="btn btn-primary">Details</a>
        @*<a asp-action="EditGuardian" asp-route-id="@f.GuardianId" class="btn btn-primary">Edit</a>*@
        <a asp-action="DeleteGuardian" asp-route-id="@f.GuardianId" class="btn btn-primary">Delete</a>
    </td>
</tr>            }
        </table>
    </div>
</body>
